# --- BASE ---
NODE_ENV=development
PORT=3001

# --- DATABASE (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=admin123
DB_NAME=efuture_db

# --- AUTHENTICATION (HS256 Standard) ---
JWT_SECRET_KEY=test_jwt_secret
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# --- CORS CONFIGURATION ---
CORS_ALLOWED_ORIGINS_HTTP=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_ORIGINS_WS=http://localhost:3000

# Optional CORS settings (defaults are usually fine)
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept,X-Requested-With
CORS_EXPOSED_HEADERS=Content-Disposition
CORS_MAX_AGE=86400

# Throttler
THROTTLER_TTL=6000
THROTTLER_LIMIT=60